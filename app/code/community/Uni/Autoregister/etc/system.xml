<config>
    <tabs>
        <autoregister translate="label" module="autoregister">
            <label>Unicode Extensions</label>
            <sort_order>210</sort_order>
        </autoregister>
    </tabs>
    <sections>
        <autoregister translate="label" module="autoregister">
            <label>Autoregistration Settings</label>
            <tab>autoregister</tab>
            <frontend_type>text</frontend_type>
            <sort_order>110</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <autoregister translate="label">
                    <label>Autorgisteration Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Autoregistration</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <password_length translate="label">
                            <label>Password Length</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-greater-than-zero</validate>
                            <comment><![CDATA[Minimum length of password is 6.]]></comment>
                        </password_length>
                        <password_char translate="label">
                            <label>Password Character</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Random charater like [abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789].]]></comment>
                       </password_char>
                    </fields>
                </autoregister>                
            </groups>
        </autoregister>
    </sections>
</config>