<?xml version="1.0"?>
<config>
    <modules>
        <AquiveMedia_Orderlabel>
            <version>0.1.5</version>
        </AquiveMedia_Orderlabel>
    </modules>
    <admin>
        <routers>
            <orderlabel>
                <use>admin</use>
                <args>
                    <module>AquiveMedia_Orderlabel</module>
                    <frontName>orderlabel</frontName>
                </args>
            </orderlabel>
        </routers>
    </admin>
    <frontend>
        <translate>
            <modules>
                <AquiveMedia_Orderlabel>
                    <files>
                        <default>AquiveMedia_Orderlabel.csv</default>
                    </files>
                </AquiveMedia_Orderlabel>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <!--<menu>
            <sales module="sales">
                <children>
                    <orderlabel module="orderlabel" translate="title">
                        <title>Orderlabels</title>
                        <sort_order>25</sort_order>
                        <action>orderlabel/adminhtml_orderlabel</action>
                    </orderlabel>
                </children>
            </sales>
        </menu>-->
        <layout>
            <updates>
                <orderlabel>
                    <file>orderlabel.xml</file>
                </orderlabel>
            </updates>
        </layout>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <orderlabel>
                                            <title>AquiveMedia - Orderlabels</title>
                                        </orderlabel>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <AquiveMedia_Orderlabel>
                    <files>
                        <default>AquiveMedia_Orderlabel.csv</default>
                    </files>
                </AquiveMedia_Orderlabel>
            </modules>
        </translate>
    </adminhtml>

    <global>
        <blocks>
            <orderlabel>
                <class>AquiveMedia_Orderlabel_Block</class>
            </orderlabel>
        </blocks>
        <helpers>
            <orderlabel>
                <class>AquiveMedia_Orderlabel_Helper</class>
            </orderlabel>
        </helpers>
        <models>
            <orderlabel>
                <class>AquiveMedia_Orderlabel_Model</class>
            </orderlabel>
        </models>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <orderlabel_massaction>
                        <type>singleton</type>
                        <class>AquiveMedia_Orderlabel_Model_Observer</class>
                        <method>addAction</method>
                    </orderlabel_massaction>
                    <orderlabel_button>
                        <type>singleton</type>
                        <class>AquiveMedia_Orderlabel_Model_Observer</class>
                        <method>addPrintButton</method>
                    </orderlabel_button>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </global>

    <default>
        <orderlabel>
            <general>
                <layout>0</layout>
                <buttonlocation>header</buttonlocation>
                <postcodeformat>1</postcodeformat>
                <localscript>1</localscript>
            </general>
            <sender>
                <enabled>0</enabled>
                <name></name>
                <address></address>
                <postcode></postcode>
                <city></city>
                <country></country>
            </sender>
            <recipient>
                <print_country>0</print_country>
                <print_state>0</print_state>
                <print_phone>0</print_phone>
                <print_company>0</print_company>
                <print_company_prefix></print_company_prefix>
            </recipient>
        </orderlabel>
    </default>
</config>