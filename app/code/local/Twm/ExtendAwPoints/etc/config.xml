<?xml version="1.0"?>
<config>
    <modules>
        <Twm_ExtendAwPoints>
            <version>1.0.1</version>
        </Twm_ExtendAwPoints>
    </modules>
    <global>
        <helpers>
            <pointsandrewards>
                <class>Twm_ExtendAwPoints_Helper</class>
            </pointsandrewards>
        </helpers>
        <blocks>
            <pointsandrewards>
                <class>Twm_ExtendAwPoints_Block</class>
            </pointsandrewards>
            <checkout>
                <rewrite>
                    <onepage_payment_methods>Twm_ExtendAwPoints_Block_Points_Checkout_Onepage_Payment_Methods</onepage_payment_methods>
                </rewrite>
            </checkout>
        </blocks>
        <models>
            <pointsandrewards>
                <class>Twm_ExtendAwPoints_Model</class>
            </pointsandrewards>
        </models>
        <resources>
            <pointsandrewards_setup>
                <setup>
                    <module>Twm_ExtendAwPoints</module>
                </setup>
            </pointsandrewards_setup>
        </resources>
        <events>
            <controller_action_postdispatch_checkout_onepage_savePayment>
                <observers>
                    <pointsandrewards>
                        <type>singleton</type>
                        <class>pointsandrewards/observer</class>
                        <method>onepageCheckClubJmaValue</method>
                    </pointsandrewards>
                </observers>
            </controller_action_postdispatch_checkout_onepage_savePayment>
        </events>
    </global>
    <default>
        <payment>
            <pointsandrewards>
                <active>1</active>
                <model>pointsandrewards/method_pointsandrewards</model>
                <order_status>pending</order_status>
                <title>Points and Rewards</title>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
            </pointsandrewards>
        </payment>
    </default>
</config>