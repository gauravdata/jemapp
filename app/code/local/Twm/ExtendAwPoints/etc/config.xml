<?xml version="1.0"?>
<config>
    <modules>
        <Twm_ExtendAwPoints>
            <version>1.0.1</version>
        </Twm_ExtendAwPoints>
    </modules>
    <global>
        <helpers>
            <pointsandrewards>
                <class>Twm_ExtendAwPoints_Helper</class>
            </pointsandrewards>
        </helpers>
        <blocks>
            <pointsandrewards>
                <class>Twm_ExtendAwPoints_Block</class>
            </pointsandrewards>
            <checkout>
                <rewrite>
                    <onepage_payment_methods>Twm_ExtendAwPoints_Block_Points_Checkout_Onepage_Payment_Methods</onepage_payment_methods>
                </rewrite>
            </checkout>
            <points>
                <rewrite>
                    <catalog_product_points>Twm_ExtendAwPoints_Block_Points_Catalog_Product_Points</catalog_product_points>
                </rewrite>
            </points>
        </blocks>
        <models>
            <pointsandrewards>
                <class>Twm_ExtendAwPoints_Model</class>
            </pointsandrewards>
        </models>
        <resources>
            <pointsandrewards_setup>
                <setup>
                    <module>Twm_ExtendAwPoints</module>
                </setup>
            </pointsandrewards_setup>
        </resources>
        <events>
            <sales_model_service_quote_submit_failure>
                <observers>
                    <pointsandrewards>
                        <type>singleton</type>
                        <class>pointsandrewards/observer</class>
                        <method>salesOrderPaymentCancel</method>
                    </pointsandrewards>
                </observers>
            </sales_model_service_quote_submit_failure>
            <sales_order_payment_cancel>
                <observers>
                    <pointsandrewards>
                        <type>singleton</type>
                        <class>pointsandrewards/observer</class>
                        <method>salesOrderPaymentCancel</method>
                    </pointsandrewards>
                </observers>
            </sales_order_payment_cancel>
            <controller_action_postdispatch_checkout_onepage_savePayment>
                <observers>
                    <pointsandrewards>
                        <type>singleton</type>
                        <class>pointsandrewards/observer</class>
                        <method>onepageCheckClubJmaValue</method>
                    </pointsandrewards>
                </observers>
            </controller_action_postdispatch_checkout_onepage_savePayment>
            <controller_action_postdispatch_checkout_onepage_saveBilling>
                <observers>
                    <pointsandrewards>
                        <type>singleton</type>
                        <class>pointsandrewards/observer</class>
                        <method>onepageCheckClubJmaValue</method>
                    </pointsandrewards>
                </observers>
            </controller_action_postdispatch_checkout_onepage_saveBilling>
            <controller_action_predispatch_checkout_onepage_success>
                <observers>
                    <pointsandrewards>
                        <type>singleton</type>
                        <class>pointsandrewards/observer</class>
                        <method>onepageSaveClubJmaValue</method>
                    </pointsandrewards>
                </observers>
            </controller_action_predispatch_checkout_onepage_success>
            <controller_action_postdispatch_customer_account_editPost>
                <observers>
                    <pointsandrewards>
                        <type>singleton</type>
                        <class>pointsandrewards/observer</class>
                        <method>accountEditToggleJma</method>
                    </pointsandrewards>
                </observers>
            </controller_action_postdispatch_customer_account_editPost>
            <controller_action_predispatch_checkout_onepage_success>
                <observers>
                    <pointsandrewards>
                        <type>singleton</type>
                        <class>pointsandrewards/observer</class>
                        <method>customerSaveBefore</method>
                    </pointsandrewards>
                </observers>
            </controller_action_predispatch_checkout_onepage_success>
            <controller_action_predispatch_checkout_onepage_success>
                <observers>
                    <pointsandrewards>
                        <type>singleton</type>
                        <class>pointsandrewards/observer</class>
                        <method>updatePointsNotificationFromCustomerEdit</method>
                    </pointsandrewards>
                </observers>
            </controller_action_predispatch_checkout_onepage_success>
        </events>
    </global>
    <default>
        <payment>
            <pointsandrewards>
                <active>1</active>
                <model>pointsandrewards/method_pointsandrewards</model>
                <order_status>pending</order_status>
                <title>Points and Rewards</title>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
            </pointsandrewards>
        </payment>
    </default>
</config>