<?xml version="1.0"?>
<config>
    <sections>
        <awcolorswatches translate="label" module="awcolorswatches">
            <label>Product Color Swatches</label>
            <tab>awall</tab>
            <frontend_type>text</frontend_type>
            <sort_order>989</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <global translate="label">
                    <label>General Settings</label>
                    <expanded>1</expanded>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Extension</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                    </fields>
                </global>
                <product_view translate="label">
                    <label>Product View Page</label>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <width translate="label">
                            <label>Swatcher Image Width, px</label>
                            <comment>Numerical value, Digits 0-9 are allowed only.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <validate>validate-not-negative-number</validate>
                        </width>
                        <height translate="label, comment">
                            <label>Swatcher Image Height, px</label>
                            <comment>Numerical value, Digits 0-9 are allowed only.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <validate>validate-not-negative-number</validate>
                        </height>
                    </fields>
                </product_view>
                <category_view translate="label">
                    <label>Category View Page</label>
                    <sort_order>300</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <is_enabled translate="label">
                            <label>Use Swatches at Category Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </is_enabled>
                        <width translate="label">
                            <label>Swatcher Image Width, px</label>
                            <comment>Numerical value, Digits 0-9 are allowed only.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <validate>validate-not-negative-number</validate>
                        </width>
                        <height translate="label, comment">
                            <label>Swatcher Image Height, px</label>
                            <comment>Numerical value, Digits 0-9 are allowed only.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <validate>validate-not-negative-number</validate>
                        </height>
                    </fields>
                </category_view>
                <layer translate="label">
                    <label>Layered Navigation</label>
                    <sort_order>400</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <use_as translate="label">
                            <label>Use Swatches in Layered Navigation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>awcolorswatches/source_config_useInLayeredNavigation</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_as>
                    </fields>
                </layer>
            </groups>
        </awcolorswatches>
    </sections>
</config>
