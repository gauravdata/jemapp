?><?php if ($this->isDisplayControls()): ?>
    <table class="aw_prevnext">
        <?php if ($this->isDisplayProductThumbnails() || $this->isDisplayCategoryThumbnails()): ?>
            <tr>
                <td class="awpn_prev">
                    <?php if ($this->isDisplayProductThumbnails()): ?>
                        <?php if ($this->getPreviousProductLink() != ''): ?>
                            <?php if ($this->getPreviousProductThumbUrl()): ?>
                                <a id="awpn_prev_product_img" href=<?php echo $this->getPreviousProductLink() ?> title="<?php echo $this->getPreviousProductLabel() . " " . $this->__('(Ctrl+Right)') ?>">
                                    <img src="<?php echo $this->getPreviousProductThumbUrl(); ?>" title="<?php echo $this->getPreviousProductLabel(); ?>" alt="<?php echo $this->getPreviousProductLabel(); ?>" style="width:<?php echo $this->getProductThumbnailWidth(); ?>px;height:<?php echo $this->getProductThumbnailHeight(); ?>px;" />
                                </a>
                            <?php endif; ?>
                        <?php endif; ?>
                    <?php endif; ?>
                </td>
                <td class="awpn_up">
                    <?php if ($this->isDisplayCategoryThumbnails()): ?>
                        <?php if ($this->getUpLevelLink() != ''): ?>
                            <?php if ($this->getUpCategoryThumbUrl()): ?>
                                <a id="awpn_up" href=<?php echo $this->getUpLevelLink() ?> title="<?php echo $this->getUpCategoryLabel() . " " . $this->__('(Ctrl+Up)') ?>">
                                    <img src="<?php echo $this->getUpCategoryThumbUrl(); ?>" title="<?php echo $this->getUpCategoryLabel(); ?>" alt="<?php echo $this->getUpCategoryLabel(); ?>" style="width:<?php echo $this->getProductThumbnailWidth(); ?>px;height:<?php echo $this->getProductThumbnailHeight(); ?>px;" />
                                </a>
                            <?php endif; ?>
                        <?php endif; ?>
                    <?php endif; ?>
                </td>
                <td class="awpn_next">
                    <?php if ($this->isDisplayProductThumbnails()): ?>
                        <?php if ($this->getNextProductLink() != ''): ?>
                            <?php if ($this->getNextProductThumbUrl()): ?>
