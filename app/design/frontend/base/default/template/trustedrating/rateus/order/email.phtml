/**
 * 
 * 'trustedrating/rateus/order/email.phtml'
 */

$this;
/* @var $this Symmetrics_TrustedRating_Block_RateUs_Order_Email */

$_rateNow = Symmetrics_TrustedRating_Model_Trustedrating::RATEUS_TYPE_RATE_NOW;
$_rateLater = Symmetrics_TrustedRating_Model_Trustedrating::RATEUS_TYPE_RATE_LATER;
?>
<?php if ($this->isActive()): ?>
<div id="<?php echo $this->getHtmlId() ?>" class="trustedrating-rateus">
    <table border="0">
        <tr>
            <td colspan="3">
                <?php
                    $_msg = '';
                    $_storeName = $this->_getStore()->getFrontendName();

                    $_msg .= 'Thanks for having purchased at %s.';
                    $_msg .= ' Were you satisfied with our service?';
                    $_msg .= ' Please write a review and rate us.';
                ?>
                <?php echo $this->__($_msg, $_storeName, $_storeName) ?> 
            </td>
        </tr>
        <tr>
            <td>
                <a href="<?php echo $this->getRatingOrderUrl($_rateNow) ?>" title="<?php echo $this->__('Rate shop now') ?>">
                    <img alt="<?php echo $this->__('Rate shop now') ?>" src="<?php echo $this->getRateButtonSrc($_rateNow) ?>" />
                </a>
            </td>
            <td>
                <a href="<?php echo $this->getRatingOrderUrl($_rateLater) ?>" title="<?php echo $this->__('Rate shop later') ?>">
                    <img alt="<?php echo $this->__('Rate shop later') ?>" src="<?php echo $this->getRateButtonSrc($_rateLater) ?>" />
                </a>
            </td>
            <td>
                <?php
                    $_msg = '';
                    $_msg .= 'Yes, I would like to "rate my purchase later" and receive a';
                    $_msg .= ' one-off e-mail from Trusted Shops after %s days';
                    $_msg .= ' reminding me to submit my rating (%s).';
                ?>
                <?php echo $this->__($_msg, $this->getDaysIntervall(), $this->getTsPrivacyLink()) ?>
            </td>
        </tr>
    </table>
</div>
<?php endif ?>
