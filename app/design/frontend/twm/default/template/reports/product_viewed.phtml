<?php if ($_products = $this->getRecentlyViewedProducts()): ?>

    <div class="box-collateral box-up-sell">
        <h2 class="owl-title"><?php echo $this->__('Recently Viewed Products') ?></h2>
        <div class="owl-carousel" id="viewed-product-slider">
            <?php foreach ($_products as $_item): ?>
                <div class="item">
                    <a href="<?php echo $this->getProductUrl($_item) ?>" title="<?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?>" class="product-image">
                        <img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(720,965) ?>" alt="<?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?>" />
                    </a>
                    <h2 class="product-name">
                        <a href="<?php echo $this->getProductUrl($_item) ?>" title="<?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?>">
                            <?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?>
                        </a>
                    </h2>
                    <?php echo $this->getPriceHtml($_item, true, '-viewed') ?>
                </div>
            <?php endforeach; ?>
        </div>

        <script type="text/javascript">
            jQuery(function(){
                jQuery('#viewed-product-slider').owlCarousel({
                    loop:true,
                    nav:true,
                    navText: [
                        '<i class="mdi mdi-chevron-left"></i>',
                        '<i class="mdi mdi-chevron-right"></i>'
                    ],
                    dots:false,
                    responsive:{
                            0:{
                                items:2
                            },
                            767:{
                                items:2
                            },
                            1000:{
                                items:4
                            },
                            1250:{
                                items:6
                            }
                    }
                })
            });
        </script>
    </div>

<?php endif; ?>
