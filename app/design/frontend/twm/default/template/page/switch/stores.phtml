/**
 * Store switcher template
 *
 * @see Mage_Core_Block_Store_Switcher
 */
$websites = Mage::app()->getWebsites();

if (count($websites) > 1): ?>
    <ul class="website-switcher">
        <?php foreach ($websites as $website): // print out each website name and code as a dropdown box item ?>
            <?php $_selected = $website->getCode() == Mage::app()->getWebsite()->getCode() ? ' class="active"' : '' ?>
        <li<?php echo $_selected; ?>><a href="<?php echo $website->getDefaultStore()->getBaseUrl()?>"><?php echo $this->htmlEscape($website->getName()) ?></a></li>
        <?php endforeach; ?>
    </ul>
<?php endif; ?>