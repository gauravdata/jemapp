<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="box-collateral box-reviews" id="customer-reviews">
    <?php if (count($_items)):?>
			<h2><?php echo $this->__('Customer Reviews') ?></h2>
			<p><a href="#review-form"><?php echo $this->__('Write Your Own Review') ?></a></p>
			<?php echo $this->getChildHtml('toolbar') ?>
			<?php foreach ($_items as $_review):?>
		<div class="panel panel-default">
			<div class="panel-heading">
                <a href="<?php echo $this->getReviewUrl($_review->getId()) ?>"><?php echo $this->escapeHtml($_review->getTitle()) ?></a> <?php echo $this->__('Review by <span>%s</span>', $this->escapeHtml($_review->getNickname())) ?> <?php echo $this->__('(Posted on %s)', $this->formatDate($_review->getCreatedAt()), 'long') ?>
            </div>
			<div class="panel-body">
				<p><?php echo nl2br($this->escapeHtml($_review->getDetail())) ?></p>
				<?php $_votes = $_review->getRatingVotes(); ?>
				<?php if (count($_votes)): ?>
					<?php foreach ($_votes as $_vote): ?>
						<div class="row">
							<div class="col-xs-3">
								<strong class="review-rating"><?php echo $this->__($this->escapeHtml($_vote->getRatingCode())) ?>:</strong>
							</div>
							<div class="col-xs-9">
								<?php
								$rating = ceil($_vote->getPercent());
								if($rating < 33){
									$class = 'progress-bar-danger';
								} elseif($rating < 66) {
									$class = 'progress-bar-warning';
								} else {
									$class = 'progress-bar-success';
								}
								?>
								<div class="progress">
									<div class="progress-bar <?=$class;?>" style="width:<?=$rating;?>%;"></div>
								</div>
							</div>
						</div>
					<?php endforeach; ?>
				<?php endif; ?>
            </div>
		</div>
			<?php endforeach; ?>
			<?php echo $this->getChildHtml('toolbar') ?>
    <?php endif;?>
    <?php echo $this->getChildHtml('review_form') ?>
</div>
