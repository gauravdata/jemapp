<?php if (($_products = $this->getProductCollection()) && $_products->getSize()): ?>
<div class="widget hidden-xs" id="widget-new-products">
	<h2><?php echo $this->__('New Products') ?></h2>
	<div id="carousel-new-products" class="carousel slide" data-ride="carousel">
    <?php echo $this->getPagerHtml() ?>
		<div class="carousel-inner">
			<?php $_columnCount = $this->getColumnCount(); ?>
			<?php $i=0; foreach ($_products->getItems() as $_product): ?>
			<?php if ($i++%$_columnCount==0): ?>
			<div class="item clearfix<?=($i==1)?' active':''; ?>">
				<?php endif; ?>
				<div class="carousel-item-wrapper<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?>" style="width: <?=100/$_columnCount;?>%;">
					<div class="carousel-item-container">
						<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(300) ?>" alt="<?php echo $this->stripTags($_product->getName(), null, true) ?>" /></a>
						<p class="title product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>)"><?php echo $this->helper('catalog/output')->productAttribute($_product, $_product->getName() , 'name') ?></a></p>
						<?php echo $this->getReviewsSummaryHtml($_product, 'short') ?>
						<?php echo $this->getPriceHtml($_product, true, '-widget-new-grid') ?>
						<?php if ($this->helper('wishlist')->isAllow()) : ?>
							<a href="<?php echo $this->getAddToWishlistUrl($_product) ?>" class="btn btn-primary btn-block btn-wishlist"><?php echo $this->__('Add to Wishlist') ?></a>
						<?php endif; ?>
						<?php if ($_product->isSaleable()): ?>
							<button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="btn btn-success btn-block btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><?php echo $this->__('Add to Cart') ?></button>
						<?php else: ?>
							<p><span class="label label-danger"><?php echo $this->__('Out of stock') ?></span></p>
						<?php endif; ?>
					</div>
				</div>
				<?php if ($i%$_columnCount==0 || $i==count($_products)): ?>
			</div>
			<?php endif; ?>
			<?php endforeach; ?>
		</div>
		<?php if($_columnCount < count($_products)): ?>
		<a class="left carousel-control" href="#carousel-new-products" data-slide="prev">
			<span class="icon-prev"></span>
		</a>
		<a class="right carousel-control" href="#carousel-new-products" data-slide="next">
			<span class="icon-next"></span>
		</a>
		<?php endif; ?>
    </div>
</div>
<?php endif; ?>
