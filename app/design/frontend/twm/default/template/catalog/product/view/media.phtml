/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>

<div class="product-visual-wrapper">
    <?php
    $_img = '<div class="product-visual" style="background-image: url('.$this->helper('catalog/image')->init($_product, 'image')->keepFrame(false)->resize(null,675).')"><img src="' . $this->getSkinUrl('images/empty.png') . '" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" id="zoom-image" data-zoom-image="'.$this->helper('catalog/image')->init($_product, 'image')->keepFrame(false)->resize(2000,null).'" /></div>';
    echo $_helper->productAttribute($_product, $_img, 'image');
    ?>

    <?php if (count($this->getGalleryImages()) > 0): ?>
    <div class="more-views<?php if(count($this->getGalleryImages()) > 4) { echo ' double-row'; } ?> clearfix">
        <?php foreach ($this->getGalleryImages() as $_image): ?>
            <a href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->keepFrame(false)->resize(null,675); ?>" data-zoom-image="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->keepFrame(false)->resize(2000,null); ?>">
                <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize(80); ?>" />
            </a>
        <?php endforeach; ?>
    </div>
    <?php endif; ?>
</div>

<script type="text/javascript">
    function setZoom(){
        jQuery('#zoom-image').elevateZoom({
            zoomType: "inner",
            zoomWindowFadeIn: 500,
            zoomWindowFadeOut: 750
        });
    }
    jQuery(window).load(function(){
        setZoom();

        jQuery('#zoom-image').on('click', function(){
            jQuery('.zoomContainer').toggleClass('visible');
        });
    });

    // switch product image
    jQuery('.product-img-box .more-views a').click(function(){
        jQuery('.product-visual').css('background-image', 'url("' + jQuery(this).attr('href') + '")');
        jQuery('.zoomContainer > div > div').css('background-image', 'url("' + jQuery(this).data('zoom-image') + '")');
        return false;
    });
</script>