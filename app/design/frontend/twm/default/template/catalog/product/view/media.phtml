<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<div class="product-visual-wrapper">
    <?php if (count($this->getGalleryImages()) > 1): ?>
        <div class="owl-carousel" id="product-image-slider">
            <?php $i = 0; foreach ($this->getGalleryImages() as $_image): $i++; ?>
                <div class="item">
                    <div class="product-visual">
                        <img src="<?php echo $this->helper('catalog/image')->init($_product, 'image', $_image->getFile())->keepFrame(false)->resize(null,675); ?>" class="view-image" data-zoom-image="<?php echo $this->helper('catalog/image')->init($_product, 'image', $_image->getFile())->keepFrame(false)->resize(2000,null); ?>" />
                    </div>
                </div>
            <?php endforeach; ?>
        </div>
        <div class="zoom-image"></div>
        <div class="more-views<?php if(count($this->getGalleryImages()) > 4) { echo ' double-row'; } ?> clearfix">
            <?php foreach ($this->getGalleryImages() as $_image): ?>
                <a href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->keepFrame(false)->resize(null,675); ?>">
                    <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize(80); ?>" />
                </a>
            <?php endforeach; ?>
        </div>
        <script type="text/javascript">
            jQuery(function(){
                var productImageOwl = jQuery('#product-image-slider');
                productImageOwl.owlCarousel({
                    loop:true,
                    nav:true,
                    navText: [
                        '<i class="icon-arrow-left icons"></i>',
                        '<i class="icon-arrow-right icons"></i>'
                    ],
                    items: 1,
                    responsive:{
                        0:{
                            mouseDrag: true,
                            touchDrag: true
                        },
                        1024:{
                            mouseDrag: false,
                            touchDrag: false
                        }
                    }
                });
                jQuery('.product-img-box .more-views a').click(function(){
                    productImageOwl.trigger('to.owl.carousel', [jQuery(this).index()]);
                    return false;
                });
            });
        </script>
    <?php else: ?>
        <div class="product-visual">
            <img src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->keepFrame(false)->resize(null,675); ?>" class="view-image" data-zoom-image="<?php echo $this->helper('catalog/image')->init($_product, 'image')->keepFrame(false)->resize(2000,null); ?>" />
        </div>
    <?php endif; ?>
</div>
<script type="text/javascript">
    jQuery('.product-visual').click(function() {
        jQuery('.product-visual-wrapper').addClass('show');
        jQuery('.zoom-image').css('background-image', 'url(' + jQuery(this).find('img').data('zoom-image') + ')');
        jQuery('.product-options-wrapper').addClass('hide');
    });
    jQuery('.zoom-image').mousemove(function(e) {
        var $this = jQuery(this);
        var parentOffset = $this.offset();
        var relX = 100 / ($this.width() / (e.pageX - parentOffset.left));
        var relY = 100 / ($this.height() / (e.pageY - parentOffset.top));
        $this.css('background-position', relX + '%' + relY + '%');
    }).click(function() {
        jQuery('.product-visual-wrapper').removeClass('show');
        jQuery('.product-options-wrapper').removeClass('hide');
    });
</script>