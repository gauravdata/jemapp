 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>

<div class="onsale-product-container">
	<?php echo Mage::helper('onsale')->getProductLabelHtml($_product); ?>
	<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
	<p class="product-image">
		<span class="glyphicon glyphicon-search"></span>
        <?php
            $_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(725).'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" id="zoom-image" data-zoom-image="'.$this->helper('catalog/image')->init($_product, 'image')->resize(725).'" />';
            echo $_helper->productAttribute($_product, $_img, 'image');
        ?>
	</p>
	<?php else: ?>
	<p class="product-image">
		<span class="glyphicon glyphicon-search"></span>
						<?php
			$_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(725).'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" id="zoom-image" data-zoom-image="'.$this->helper('catalog/image')->init($_product, 'image')->resize(725).'" />';
							echo $_helper->productAttribute($_product, $_img, 'image');
						?>
	</p>
				<?php endif; ?>
</div>
<?php if (count($this->getGalleryImages()) > 0): ?>
	<div class="more-views">
    <p class="title"><?php echo $this->__('More views') ?></p>
    <div class="row">
    <?php foreach ($this->getGalleryImages() as $_image): ?>
        <div class="col-xs-3 text-center">
			<a title="<?php echo $this->escapeHtml($_image->getLabel()) ?>" class="thumbnail" href="#" data-image-small="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize(725); ?>" data-image-large="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize(725); ?>">
				<img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(100); ?>" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" />
				</a>
        </div>
		<?php endforeach; ?>
	</div>
</div>
<?php endif; ?>
	<script type="text/javascript">
	function setZoom(){
        if(jQuery(window).width() > 752){
            jQuery('#zoom-image').elevateZoom({
                zoomType: "inner",
                cursor: "crosshair",
                zoomWindowFadeIn: 500,
                zoomWindowFadeOut: 750
            });
        }else{
            jQuery('#zoom-image').click(function(){
                return false;
            });
        }
	}
	jQuery(window).resize(function(){
		setZoom();
			});
	jQuery(window).load(function(){
		setZoom();
		jQuery('.more-views .row > div:first-child a').addClass('active');

		jQuery('.more-views .row > div a').click(function(){
			jQuery('.more-views .row > div a').removeClass('active');
			jQuery(this).addClass('active');
			jQuery('.product-image img#zoom-image').attr('src', jQuery(this).data('image-small')).data('zoom-image', jQuery(this).data('image-large'));
			setZoom();
			return false;
		});

		jQuery('p.product-image').click(function(){
			jQuery('#product-image-modal h4').html(jQuery('h1.product-name').html());
			jQuery('#product-image-modal .modal-body img').attr('src', jQuery('.product-image img').data('zoom-image'));
			jQuery('#product-image-modal').modal();
		});
	});
	</script>
<div id="product-image-modal" class="modal wide fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title">Product title</h4>
			</div>
			<div class="modal-body">
				<img src="" />
			</div>
		</div>
	</div>
</div>