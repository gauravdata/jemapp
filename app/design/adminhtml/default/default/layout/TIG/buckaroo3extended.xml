<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">    
    <adminhtml_system_config_edit>
        <reference name="head">
            <action method="addCss">
				<stylesheet>css/tig_buckaroo3extended/system_config_edit.css</stylesheet>
			</action>
        </reference>
    </adminhtml_system_config_edit> 
    
    <adminhtml_sales_order_view>
        <reference name="order_totals">
            <block name="buckaroo_fee" type="buckaroo3extended/paymentFee_order_totals_paymentfee" before="tax"/>
        </reference>
    </adminhtml_sales_order_view>

    <adminhtml_sales_order_invoice_view>
        <reference name="invoice_totals">
            <block name="buckaroo_fee" type="buckaroo3extended/paymentFee_order_invoice_totals_paymentfee" before="tax"/>
        </reference>
    </adminhtml_sales_order_invoice_view>

    <adminhtml_sales_order_invoice_new>
        <reference name="invoice_totals">
            <block name="buckaroo_fee" type="buckaroo3extended/paymentFee_order_invoice_totals_paymentfee" before="tax"/>
        </reference>
    </adminhtml_sales_order_invoice_new>
    	
    <adminhtml_sales_order_invoice_updateqty>
    	<reference name="invoice_totals">
            <block name="buckaroo_fee" type="buckaroo3extended/paymentFee_order_invoice_totals_paymentfee" before="tax"/>
        </reference>
    </adminhtml_sales_order_invoice_updateqty>
    
    <adminhtml_sales_order_invoice_print>
    	<reference name="invoice_totals">
            <block name="buckaroo_fee" type="buckaroo3extended/paymentFee_order_invoice_totals_paymentfee" before="tax"/>
        </reference>
    </adminhtml_sales_order_invoice_print>
    
    <adminhtml_sales_order_creditmemo_view>
        <reference name="creditmemo_totals">
            <block name="buckaroo_fee" type="buckaroo3extended/paymentFee_order_creditmemo_totals_paymentfee" before="tax"/>
        </reference>
    </adminhtml_sales_order_creditmemo_view>

    <adminhtml_sales_order_creditmemo_new>
        <reference name="creditmemo_totals">
            <block name="buckaroo_fee" type="buckaroo3extended/paymentFee_order_creditmemo_totals_paymentfee" before="tax"/>
        </reference>
        <reference name="adjustments">
       		<action method = 'setTemplate'>
       			<template>buckaroo3extended/paymentfee/order/creditmemo/create/totals/adjustments.phtml</template>
       		</action>
        </reference>
    </adminhtml_sales_order_creditmemo_new>
    
    <adminhtml_sales_order_creditmemo_updateqty>
        <reference name="creditmemo_totals">
            <block name="buckaroo_fee" type="buckaroo3extended/paymentFee_order_creditmemo_totals_paymentfee" before="tax"/>
        </reference>
        <reference name="adjustments">
       		<action method = 'setTemplate'>
       			<template>buckaroo3extended/paymentfee/order/creditmemo/create/totals/adjustments.phtml</template>
       		</action>
        </reference>
    </adminhtml_sales_order_creditmemo_updateqty>
    
    <adminhtml_sales_order_creditmemo_print>
        <reference name="creditmemo_totals">
            <block name="buckaroo_fee" type="buckaroo3extended/paymentFee_order_creditmemo_totals_paymentfee" before="tax"/>
        </reference>
    </adminhtml_sales_order_creditmemo_print>
    
    <adminhtml_sales_order_create_index>
    	<reference name="totals">
    		<action method = 'setTemplate'>
    			<setTemplate>buckaroo3extended/paymentfee/checkout/totals.phtml</setTemplate>
    		</action>
    	</reference>
    </adminhtml_sales_order_create_index>
    
    <admin_buckaroo3extended_adminhtml_giftcard_index>
        <reference name="content">
            <block type="buckaroo3extended/adminhtml_giftcard" name="buckaroo.backend.giftcard"/>
        </reference>
    </admin_buckaroo3extended_adminhtml_giftcard_index>
    
    <admin_buckaroo3extended_adminhtml_giftcard_grid>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="buckaroo3extended/adminhtml_giftcard_grid" name="buckaroo.backend.giftcard.grid"/>
        </block>
    </admin_buckaroo3extended_adminhtml_giftcard_grid>
    
    <admin_buckaroo3extended_adminhtml_giftcard_new>
        <update handle="editor"/>
        <reference name="content">
            <block type="buckaroo3extended/adminhtml_giftcard_edit" name="buckaroo.backend.giftcard.edit" />
        </reference>
    </admin_buckaroo3extended_adminhtml_giftcard_new>
    
    <admin_buckaroo3extended_adminhtml_giftcard_edit>
        <update handle="editor"/>
        <reference name="content">
            <block type="buckaroo3extended/adminhtml_giftcard_edit" name="buckaroo.backend.giftcard.edit" />
        </reference>
    </admin_buckaroo3extended_adminhtml_giftcard_edit>
</layout>
