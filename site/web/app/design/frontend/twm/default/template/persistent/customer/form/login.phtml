/**
 * Customer login form template
 *
 * @see app/design/frontend/base/default/template/customer/form/login.phtml
 */
/** @var $this Mage_Customer_Block_Form_Login */
?>
<h1><?php echo $this->__('Login or Create an Account') ?></h1>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<form action="<?php echo $this->getPostActionUrl() ?>" method="post" id="login-form">
	<div class="row">
		<div class="col-md-6">
			<fieldset>
				<legend><?php echo $this->__('New Customers') ?></legend>
				<p><?php echo $this->__('By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.') ?></p>
			</fieldset>
		</div>
		<div class="col-md-6">
			<fieldset>
				<legend><?php echo $this->__('Registered Customers') ?></legend>
				<p><?php echo $this->__('If you have an account with us, please log in.') ?></p>
					<div class="form-group">
						<label for="email" class="required"><em>*</em><?php echo $this->__('Email Address') ?></label>
						<input type="text" name="login[username]" value="<?php echo $this->escapeHtml($this->getUsername()) ?>" id="email" class="form-control" placeholder="<?php echo $this->__('Email Address') ?>" required="required" />
					</div>
					<div class="form-group">
						<label for="pass" class="required"><em>*</em><?php echo $this->__('Password') ?></label>
						<div class="input-box">
							<input type="password" name="login[password]" class="form-control" id="pass" placeholder="<?php echo $this->__('Password') ?>" required="required" />
						</div>
					</div>
					<?php echo $this->getChildHtml('form.additional.info'); ?>
					<?php echo $this->getChildHtml('persistent.remember.me'); ?>
				<?php echo $this->getChildHtml('persistent.remember.me.tooltip'); ?>
				<p class="required"><?php echo $this->__('* Required Fields') ?></p>
			</fieldset>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<button type="button" title="<?php echo $this->__('Create an Account') ?>" class="btn btn-primary" onclick="window.location='<?php echo Mage::helper('persistent')->getCreateAccountUrl($this->getCreateAccountUrl()) ?>';"><?php echo $this->__('Create an Account') ?></button>
		</div>
		<div class="col-md-6">
			<button type="submit" class="btn btn-success" title="<?php echo $this->__('Login') ?>" name="send" id="send2"><?php echo $this->__('Login') ?></button>
			<a href="<?php echo $this->getForgotPasswordUrl() ?>" class="btn btn-link"><?php echo $this->__('Forgot Your Password?') ?></a>
		</div>
	</div>
	<?php if (Mage::helper('checkout')->isContextCheckout()): ?>
		<input name="context" type="hidden" value="checkout" />
	<?php endif; ?>
</form>
