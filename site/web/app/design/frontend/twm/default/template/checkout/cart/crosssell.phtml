<?php
/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php if($this->getItemCount()): ?>
<div class="widget hidden-xs" id="widget-crosssell-products">
    <h2><?php echo $this->__('Based on your selection, you may be interested in the following items:') ?></h2>
	<div id="carousel-crosssell-products" class="carousel slide" data-ride="carousel">
		<div class="carousel-inner">
			<?php $_columnCount = $this->getColumnCount(); ?>
			<?php $i=0; foreach ($this->getItems() as $_item): ?>
			<?php if ($i++%$_columnCount==0): ?>
			<div class="item clearfix <?=($i==1)?'active':'';?>">
				<?php endif ?>
				<div class="carousel-item-wrapper<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?>" style="width: <?=100/$_columnCount;?>%;">
					<div class="carousel-item-container">
						<a class="product-image" href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(300); ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" /></a>
						<p class="lead"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></p>
						<?php echo $this->getPriceHtml($_item, true) ?>
						<button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="btn btn-success btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
						<?php if ($this->helper('wishlist')->isAllow()) : ?>
							<p><a href="<?php echo $this->getAddToWishlistUrl($_item) ?>" class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a></p>
						<?php endif; ?>
					</div>
				</div>
				<?php if ($i%$_columnCount==0 || $i==count($this->getItems())): ?>
			</div>
			<?php endif ?>
			<?php endforeach; ?>
		</div>
		<?php if($_columnCount < count($this->getItems())): ?>
		<a class="left carousel-control" href="#carousel-crosssell-products" data-slide="prev">
			<span class="icon-prev"></span>
		</a>
		<a class="right carousel-control" href="#carousel-crosssell-products" data-slide="next">
			<span class="icon-next"></span>
		</a>
		<?php endif; ?>
	</div>
    <script type="text/javascript">decorateList('crosssell-products-list', 'none-recursive')</script>
</div>
<?php endif; ?>
