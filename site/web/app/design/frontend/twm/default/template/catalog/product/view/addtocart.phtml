<?php $_product = $this->getProduct() ?>
<?php if($_product->isSaleable()): ?>
    <div class="add-to-cart">
        <?php if(!$_product->isGrouped()): ?>
        <label for="qty"><?php echo $this->__('Qty:') ?></label>
        <input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getMinimalQty($_product) ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
		<div class="clear">&nbsp;</div>
        <?php endif; ?>
		<div class="block light order corners">
			<div class="corner clt">&nbsp;</div>
			<div class="corner crt">&nbsp;</div>
			<div class="corner crb">&nbsp;</div>
			<div class="corner clb">&nbsp;</div>
	        <button type="submit" class="submit" class="button btn-cart" onclick="if (productAddToCartForm.submit()) this.disabled=true;">
				<img src="<?php echo $this->getSkinUrl('images/cart-icon.png') ?>" alt="cart" style="vertical-align: middle;" />
				<?php echo $this->__('Add to Cart') ?>
			</button>
			<div class="clear">&nbsp;</div>
		</div>
		<?php echo $this->getChildHtml('', true, true) ?>
    </div>
<?php endif; ?>
