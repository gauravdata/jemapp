                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_state_601>
                        <order_status_601 translate="label">
                            <label>Order status code 601</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Total_BuckarooCollect_Model_Sources_statuses601</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_status_601> 
                        <order_state_602_603 translate="label">
                            <label>Order state code 602/603</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Total_Buckaroo_Model_Sources_states</source_model>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_state_602_603>
                        <order_status_602_603 translate="label">
                            <label>Order status code 602/603</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Total_BuckarooCollect_Model_Sources_statuses602603</source_model>
                            <sort_order>22</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_status_602_603>                         
                        <!-- / Custom statuses for collect -->
                        
                        <send_mails translate="label">
                            <label>Send mails</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>23</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_mails>  
                        
                        <sort_order translate="label">
                            <label>Sort Order</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sort_order>
                        
                        
                             
                        <!-- buckaroocollect options end -->
                        
                    </fields>
                </buckaroocollect>
            </groups>
        </payment>
    </sections>
