			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<docdata translate="title" module="docdata">
											<title>Docdata</title>
										</docdata>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
