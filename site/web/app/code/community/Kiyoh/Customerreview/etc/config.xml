<config>
    <modules>
        <Kiyoh_Customerreview>
            <version>0.1.0</version>
        </Kiyoh_Customerreview>
    </modules>
    <frontend>
        <routers>
            <customerreview>
                <use>standard</use>
                <args>
                    <module>Kiyoh_Customerreview</module> 
                    <frontName>customerreview</frontName>
                </args>
            </customerreview>
        </routers>
        <layout>
            <updates>
                <customerreview>
                    <file>customerreview.xml</file>
                </customerreview>
            </updates>
        </layout>
		<events>
            <sales_order_shipment_save_after>
                <observers>
                    <customerreview>
                        <type>singleton</type>
                        <class>Kiyoh_Customerreview_Model_Observer</class>
                        <method>salesOrderShipmentSaveAfter</method>
                    </customerreview>
                </observers>
            </sales_order_shipment_save_after>
        </events>
    </frontend>

    <adminhtml>
		<layout>
			<updates>
				<customerreview>
					<file>customerreview.xml</file>
				</customerreview>
			</updates>
		</layout>
		<events>
            <sales_order_shipment_save_after>
                <observers>
                    <customerreview>
                        <type>singleton</type>
                        <class>Kiyoh_Customerreview_Adminhtml_Model_Observer</class>
                        <method>salesOrderShipmentSaveAfter</method>
                    </customerreview>
                </observers>
            </sales_order_shipment_save_after>
        </events>	
    </adminhtml>   
    <global>
        <models>
			<customerreview_adminhtml>
				<class>Kiyoh_Customerreview_Adminhtml_Model</class>
			</customerreview_adminhtml>

            <customerreview>
                <class>Kiyoh_Customerreview_Model</class>
            </customerreview>
        </models>
        <blocks>
            <customerreview>
                <class>Kiyoh_Customerreview_Block</class>
            </customerreview>
        </blocks>
        <helpers>
            <customerreview>
                <class>Kiyoh_Customerreview_Helper</class>
            </customerreview>
        </helpers>
    </global>
	<default>
    <customconfig>
        <review_group>
            <custom_action>sendInvitation</custom_action>
        </review_group>
    </customconfig>
</default>
</config>